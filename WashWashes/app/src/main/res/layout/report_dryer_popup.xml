<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="500dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="151dp"
        android:layout_height="121dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129"
        app:srcCompat="@drawable/ic_person" />

    <EditText
        android:id="@+id/machine_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="0dp"
        android:textSize="24sp"
        android:hint="Machine ID"
        android:textColor="@color/purple_500"
        android:inputType="text"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/fault_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:hint="Fault"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/reporter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Name"
        android:inputType="text"
        android:textColor="@color/purple_500"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/fault_description"
        tools:layout_editor_absoluteX="0dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/reporter_hp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="@color/purple_500"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/reporter_name"
        tools:layout_editor_absoluteX="0dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/save_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reporter_hp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/cancel_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintTop_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>